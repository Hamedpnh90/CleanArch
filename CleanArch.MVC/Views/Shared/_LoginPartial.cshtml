@using Microsoft.AspNetCore.Identity


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark">  @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="LogOut">LogOut</a>
        </li>

    }
    else
    {
        <li class="nav-item">
          <a asp-action="Register" asp-controller="Account" class="btn btn-danger">Register </a>
        </li>
        <li class="nav-item">
            <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Login </a>
        </li>
        
    }
</ul>




